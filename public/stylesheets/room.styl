@import "base"
@import "layout"

#inner-content
	text-align: center

.furniture-images, #room-ui
	position: absolute
	left: 9999px

#furniture-container
	ui-header(false)
	border-radius(1rem)
	text-align: left
	box-shadow(0 5px 0 rgba(0, 0, 0, 0.1))
	margin: auto
	width: 60%
	overflow: hidden
	p
		padding: 0.5rem
	ul
		ui-content()
		padding: 0.5rem
		height: 100%
		li
			display: inline-block
			padding: 2px
			&:hover
				background-color: yellow
