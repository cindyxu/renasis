@import "base"
@import "layout"

#inner-content
	text-align: center

.furniture-images, #room-ui
	position: absolute
	left: 9999px

.furniture-ids
	display: none

li.furniture-listing
	position: relative
	display: inline-block
	padding: 2px
	overflow: hidden
	border-radius(6px)
	&:hover
		background-color: yellow
	&.all-removed
		opacity: 0.3
		&:hover
			background-color: transparent

.furniture-count
	position: absolute
	bottom: 0
	right: 0
	font-size: 0.5rem
	border-radius(0.4rem)
	background-color: $ui-accent-color
	padding: 0.2rem
	color: white

#furniture-container
	ui-header(false)
	border-radius(1rem)
	text-align: left
	box-shadow(0 5px 0 rgba(0, 0, 0, 0.1))
	margin: auto
	width: 60%
	overflow: hidden
	p.furniture-category
		padding: 0.5rem
	ul
		ui-content()
		padding: 0.5rem
		height: 100%


