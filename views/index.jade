						img.furniture-tile(src="/images/items/furniture/floor/birch/tile_3.png")
						img.furniture-tile(src="/images/items/furniture/floor/birch/tile_4.png")

						img.furniture-edge(src="/images/items/furniture/floor/birch/edge_1.png")
