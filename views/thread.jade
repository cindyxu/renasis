extends layout

mixin post(postObj, lr)
	.quote-container(class=lr)
		- if (lr === "left")
			.avatar
				img(src="/images/testout.png")
		.quote-links
			a(href="fake")
				img(src='images/bunny.png')
			a(href="fake")
				img(src='images/bunny.png')
			a(href="fake")
				img(src='images/bunny.png')
		div.quote
			p= postObj.message
		- if (lr === "right")
			.avatar
				img(src="/images/testout.png")

block inner-content
	- for (var i = 0; i < posts.length; i++)
		.post
			- var lr = (i%2 === 0 ? "left" : "right");
			mixin post(posts[i], lr)